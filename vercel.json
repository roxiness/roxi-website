{
  "version": 2,
  "builds": [
    {
      "src": "dist/**",
      "use": "@vercel/static",
      "config": { "distDir": "dist" }
    },
    {
      "src": "_roxi/.roxi/*.js",
      "use": "@vercel/node",
      "config": { "includeFiles": "dist/**" }
    }
  ],

  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/_roxi/.roxi/ssr.js"
    }
  ]
}
